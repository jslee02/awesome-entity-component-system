{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Awesome ECS Entry",
  "description": "Schema for entries in the awesome-entity-component-system data files",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": { "type": "string", "description": "Display name" },
    "url": { "type": "string", "format": "uri", "description": "Homepage or primary URL" },
    "github": { "type": "string", "pattern": "^[^/]+/[^/]+$", "description": "GitHub owner/repo" },
    "gitlab": { "type": "string", "description": "GitLab path" },
    "description": { "type": "string", "description": "One-line description" },
    "archived": { "type": "boolean", "description": "Whether the project is archived" },
    "_meta": {
      "type": "object",
      "description": "Auto-populated metadata from GitHub API",
      "properties": {
        "stars": { "type": "integer" },
        "last_commit": { "type": "string", "format": "date" },
        "archived": { "type": "boolean" },
        "license": { "type": "string" },
        "language": { "type": "string" }
      }
    },
    "_subsection": { "type": "string", "description": "Subsection grouping key (language name)" }
  },
  "additionalProperties": false
}
